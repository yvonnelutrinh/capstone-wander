import { useState, useEffect } from "react";
import { Howl, Howler } from "howler";
import ReactModal from "react-modal";

Modal.setAppElement('#root'); 

export default function Settings() {
  const [isOpen, setIsOpen] = useState(false);
  const [darkMode, setDarkMode] = useState(false);
  const [audioGroups, setAudioGroups] = useState(AUDIO_GROUPS);

  const AUDIO_GROUPS = {
    narration: { volume: 1, muted: false, howls: [] },
    soundBath: { volume: 0.7, muted: false, howls: [] },
  };

  const createSound = (src, group) => {
    const sound = new Howl({
      src: [src],
      volume: audioGroups[group].volume,
      mute: audioGroups[group].muted,
    });

    audioGroups[group].sounds.push(sound);
    return sound;
  };

  const handleVolumeChange = (groupId, value) => {
    setAudioGroups(prevGroups => {
      const updatedGroups = {
        ...prevGroups,
        [groupId]: {
          ...prevGroups[groupId],
          volume: parseFloat(value)
        }
      };

  const toggleModal = () => {
    setIsOpen(!isOpen);
  };
  return (<>

  </>);
}
